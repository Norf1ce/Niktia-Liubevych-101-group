// Любевич Нікіта 101 група (19 у списку)

#include <stdio.h>

int main() {
    float suma;

    printf("Обчислення вартості покупки з урахуванням знижки.\n");
    printf("Введіть суму покупки і натисніть <Enter>\n-> ");
    scanf("%f", &suma);

    if (suma > 1000) {
        printf("Вам надається знижка 10%%\n");
        suma = suma * 0.9;
    }

    printf("Сума покупки з урахуванням знижки: %.2f грн.\n", suma);

    return 0;
}
