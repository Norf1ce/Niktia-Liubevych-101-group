// Любевич Нікіта 101 група (19 у списку)

#include <stdio.h>

int main() {
    float x, y, z, max;

    printf("Введіть три числа x, y, z:\n");
    scanf("%f %f %f", &x, &y, &z);

    if (x <= y && y <= z) {
        printf("Послідовність є неспадною.\n");
    } else {
        max = x;
        if (y > max) max = y;
        if (z > max) max = z;

        x = y = z = max;
        
        printf("Послідовність не є неспадною.\n");
        printf("Нові значення: x = %.2f, y = %.2f, z = %.2f\n", x, y, z);
    }

    return 0;
}
